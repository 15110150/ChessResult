@model IEnumerable<ChessResult.Models.Tournament>
<table class="table table-striped list-progress">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Federation</th>
            <th>Flag</th>
            <th>Start date</th>
            <th>End date</th>
        </tr>
    </thead>
    <tbody>
        @{
            int no = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@no</td>
                    <td><a class="tour-name" href="/tournament/tournamentDetail/@item.ID">@item.Name</a></td>
                    <td>@item.Federation.Acronym</td>
                    <td><img src="~/img/@item.Federation.Flag" alt="" class="flag"></td>
                    <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                </tr>
                no += 1;
            }
        }
    </tbody>
</table>

